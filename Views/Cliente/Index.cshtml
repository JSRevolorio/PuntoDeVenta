@model List<Cliente>

<br/>
<div id="PlaceHolderHere"></div>

<div class="container">
    <button class="btn btn-outline-primary" data-toggle="ajax-modal" data-target="#EditCliente" data-url="@Url.Action("FormCliente",new{id = 0})"> <i class="fas fa-address-book"></i> Agregar cliente</button>
</div>
<br/>
<div class="container">
    <div id="mensaje" role="alert"></div>
    <table id="tablax" class="table table-bordered" style="width:100%">
        <thead>
            <tr class="table-encabezado">
                <th scope="col">Codigo</th>
                <th scope="col">Nombre</th>
                <th scope="col">No. Nit</th>
                <th scope="col">Telefono</th>
                <th scope="col">Correo Electronico</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Cliente cliente in @Model)
            {
                    <tr class="table-light">
                    <td>@cliente.Id</td> 
                    <td>@cliente.Nombre</td> 
                    <td>@cliente.NoNit</td> 
                    <td>@cliente.NoTelefono</td> 
                    <td>@cliente.CorreoElectronico</td>
                    <td>
                        <button class="btn btn-success" data-toggle="ajax-modal" data-target="#EditCliente" data-url="@Url.Action("FormCliente",new{id = @cliente.Id})"><i class="fas fa-edit"></i></button>
                        <button  class="btn btn-danger" id="ConfirmModal" data-url="@Url.Action("DeleteCliente",new{id = @cliente.Id})"><i class="fas fa-trash-alt"></i></button>
                    </td> 
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="preguntaDeConfirmacion">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger" id="deleteRegistro">Eliminar</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}







